# =============================================================================
# КОНФИГУРАЦИЯ ДЛЯ СЕРВЕРА С СУЩЕСТВУЮЩИМИ N8N И SUPABASE
# =============================================================================

# Telegram Bot Configuration
# Получить у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================

# Supabase URL (внешний доступ для разработки/отладки)
# На сервере Supabase доступен по http://localhost:8000
# Бот будет использовать http://supabase-kong:8000 (настроено в docker-compose.yml)
SUPABASE_URL=http://localhost:8000

# Supabase Keys - найти в Supabase Dashboard
# Откройте http://localhost:8000 -> Settings -> API
SUPABASE_KEY=your_supabase_anon_or_service_key_here

# =============================================================================
# N8N WEBHOOK CONFIGURATION  
# =============================================================================

# N8N доступен по http://localhost:5678
# Войдите в N8N и создайте 3 workflow с webhook узлами:

# 1. Webhook для определения ниши пользователя
# В N8N создайте workflow с Webhook узлом и скопируйте URL
N8N_NICHE_WEBHOOK_URL=http://localhost:5678/webhook/niche

# 2. Webhook для адаптации темы под нишу  
# В N8N создайте workflow с Webhook узлом и скопируйте URL
N8N_TOPIC_WEBHOOK_URL=http://localhost:5678/webhook/topic

# 3. Webhook для генерации поста
# В N8N создайте workflow с Webhook узлом и скопируйте URL  
N8N_POST_WEBHOOK_URL=http://localhost:5678/webhook/post

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================

# OpenAI API Key для транскрипции голосовых сообщений
# Получить на https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================

# Telegram Chat ID администратора для уведомлений
# Узнать свой chat_id: отправьте сообщение @userinfobot
ADMIN_CHAT_ID=your_telegram_chat_id_here

# Включить уведомления админу
ENABLE_ADMIN_NOTIFICATIONS=True

# =============================================================================
# BOT CONFIGURATION
# =============================================================================

# Максимальное количество пользователей
MAX_USERS=1000

# Режим отладки (True для диагностики проблем)
DEBUG=True

# =============================================================================
# ДОПОЛНИТЕЛЬНЫЕ ПЕРЕМЕННЫЕ (если используются)
# =============================================================================

# Пароль для PostgreSQL (если нужен прямой доступ к БД)
POSTGRES_PASSWORD=supabase123

# N8N логин/пароль (если нужен доступ к N8N API)
N8N_USER=admin
N8N_PASSWORD=password123
