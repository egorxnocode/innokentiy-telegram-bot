# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Database Configuration
POSTGRES_PASSWORD=supabase123

# Supabase Configuration
# Для внешнего доступа используйте http://localhost:8000
# Внутри Docker сети бот будет использовать http://supabase:8000
SUPABASE_URL=http://localhost:8000
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here

# JWT Secret для Supabase (минимум 32 символа)
JWT_SECRET=your-super-secret-jwt-token-with-at-least-32-characters

# OpenAI Configuration (for voice transcription)
OPENAI_API_KEY=your_openai_api_key_here

# N8N Configuration
N8N_USER=admin
N8N_PASSWORD=password123

# N8N Webhook Configuration
# Для внешнего доступа используйте http://localhost:5678
# Внутри Docker сети бот будет использовать http://n8n:5678

# 1. Определение ниши пользователя
N8N_NICHE_WEBHOOK_URL=http://localhost:5678/webhook/niche

# 2. Адаптация темы под нишу
N8N_TOPIC_WEBHOOK_URL=http://localhost:5678/webhook/topic

# 3. Генерация поста
N8N_POST_WEBHOOK_URL=http://localhost:5678/webhook/post

# Bot Configuration
MAX_USERS=1000
DEBUG=False

# Admin Notifications
# Отправка уведомлений в существующий админский бот
ADMIN_CHAT_ID=your_admin_chat_id_here
ENABLE_ADMIN_NOTIFICATIONS=True
